{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./source/src",
    "jsx": "react",
    "paths": {
      "src/*": ["./*"]
    },
    "types": ["node"],
    "moduleResolution": "node",
    "allowJs": true,
    "target": "ESNext",
    "strict": true,
    "declaration": false,
    "typeRoots": ["./types"]
  },
  
  "include": [
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": [
    "./build/**/*"
  ]
}